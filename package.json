{
  "name": "@mcp/coverity",
  "version": "1.0.0",
  "description": "MCP server for Coverity Connect static analysis defect management",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "coverity": "build/index.js"
  },
  "files": [
    "build",
    "README.md"
  ],
  "publishConfig": {
    "registry": "https://artifactory.mycompany.com/artifactory/api/npm/npm-releases/"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:http": "TRANSPORT=http node build/index.js",
    "dev": "node --experimental-strip-types src/index.ts",
    "test": "node --experimental-strip-types --test tests/**/*.test.ts",
    "lint": "tsc --noEmit",
    "inspect": "npm run build && npx @modelcontextprotocol/inspector node build/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "22.19.10",
    "typescript": "^5.9.3",
    "semantic-release": "^24.2.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/gitlab": "^13.2.4"
  },
  "overrides": {
    "ajv": "8.17.1",
    "hono": "4.11.9",
    "qs": "6.14.1"
  },
  "license": "MIT"
}
