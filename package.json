{
  "name": "coverity-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Coverity Connect static analysis defect management",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "coverity-mcp-server": "build/index.js"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "start:http": "TRANSPORT=http node build/index.js",
    "dev": "node --experimental-strip-types src/index.ts",
    "test": "node --experimental-strip-types --test tests/**/*.test.ts",
    "lint": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.2",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.3",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "typescript": "^5.9.3"
  },
  "license": "MIT"
}
